extends layout 

block content
  h1=title

  form(action="" method='POST' encrypte='multipart/form-data')
    div.form-group
      label(for='name') Name of the category: 
      input#name.form-control(type='text' placeholder='Type category name here' name='name' required=true value=(category == undefined ? '' : category.name))
      label(for='description') Description of the category: 
      input#description.form-control(type='text' placeholder='Type category description here' name='description' value=(category == undefined ? '' : category.description))
    .form-group 
      label(for='password')
      input#password.form-control(type='password' name='password' required=true)
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!=error.msg